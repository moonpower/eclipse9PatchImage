<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="ImageButtonPatch.command1"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <and>
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.eclipse.core.resources.IFile">
                        </instanceof>
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.png">
                        </test>
                     </iterate>
                  </with>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="imagebuttonpatch.ui.handler.Draw9PatchHandler"
            commandId="ImageButtonPatch.command1">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="ImageButtonPatch.command1"
            name="Draw9Patch">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="imagebuttonpatch.ui.Draw9Editor"
            default="false"
            id="ImageButtonPatch.editor.draw9Editor"
            name="Draw9Patch">
      </editor>
   </extension>

</plugin>
